<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/space_xs"
    android:minWidth="@dimen/week_day_min_width"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:text="Su"
        android:fontFamily="@font/exo_light"
        android:paddingTop="@dimen/space_xs"
        android:textSize="@dimen/text_medium"
        android:tag="day"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:text="19"
        android:tag="date"
        android:fontFamily="@font/exo_light"
        android:paddingVertical="@dimen/space_xs"
        android:paddingHorizontal="@dimen/space_xs"
        android:textSize="@dimen/text_xlarge"
        android:textAlignment="center"
        android:layout_height="wrap_content"/>
</LinearLayout>