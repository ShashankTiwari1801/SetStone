<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80sp"
    android:rowCount="1"
    android:background="@drawable/card"
    android:columnCount="4"
    android:hapticFeedbackEnabled="true"
    android:paddingLeft="@dimen/space_m"
    android:paddingRight="@dimen/space_s"
    android:layout_marginBottom="@dimen/space_xs"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="@dimen/daily_exercise_viewer_card_icon_dimen"
        android:src="@drawable/icon_muscle_biceps"
        android:id="@+id/IV_EXERCISE_VIEWER_CARD_MUSCLE_ICON"
        android:padding="@dimen/space_xs"

        android:layout_gravity="center_vertical"
        android:layout_height="@dimen/daily_exercise_viewer_card_icon_dimen"/>

    <TextView
        android:text="@string/exercise_placeholder_2"
        android:id="@+id/TV_EXERCISE_VIEWER_CARD_EXERCISE_NAME"
        android:layout_columnWeight="25"
        android:layout_rowWeight="1"

        android:layout_marginStart="@dimen/space_s"
        android:textColor="@color/off_white_text"
        android:fontFamily="@font/exo_light"
        android:textSize="@dimen/text_medium"
        android:gravity="center_vertical"
        />
    <ImageView
        android:layout_width="@dimen/daily_exercise_viewer_card_x_btn_dimen"
        android:id="@+id/IV_EXERCISE_VIEWER_CARD_REMOVE_BTN"
        android:layout_gravity="center_vertical"
        android:src="@drawable/icon_x"
        android:layout_marginStart="@dimen/space_s"

        android:layout_marginEnd="@dimen/space_xs"
        android:layout_height="match_parent"/>
</GridLayout>



