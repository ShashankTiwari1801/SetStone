<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/week_graph_container_background"
    android:layout_marginHorizontal="@dimen/space_m"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:rowCount="1"
        android:columnCount="7"
        android:paddingVertical="@dimen/space_l"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/space_m"
        android:layout_height="200dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_rowWeight="1"
            android:background="@drawable/add_set_back"
            android:layout_marginHorizontal="@dimen/space_xs"
            android:layout_columnWeight="1"
            >
            <TextView
                android:layout_width="match_parent"
                android:background="@color/off_white_text"
                android:layout_alignParentBottom="true"
                android:layout_height="100dp"/>
            <TextView
                android:layout_width="match_parent"
                android:text="M"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:textColor="@color/darker_background_color_main"
                android:textStyle="bold"
                android:textSize="@dimen/text_medium"
                android:layout_marginBottom="@dimen/space_xs"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_rowWeight="1"
            android:layout_marginHorizontal="@dimen/space_xs"
            android:background="@drawable/add_set_back"
            android:layout_columnWeight="1"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_rowWeight="1"
            android:layout_marginHorizontal="@dimen/space_xs"
            android:background="@drawable/add_set_back"
            android:layout_columnWeight="1"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_rowWeight="1"
            android:layout_marginHorizontal="@dimen/space_xs"
            android:background="@drawable/add_set_back"
            android:layout_columnWeight="1"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_rowWeight="1"
            android:layout_marginHorizontal="@dimen/space_xs"
            android:background="@drawable/add_set_back"
            android:layout_columnWeight="1"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_rowWeight="1"
            android:layout_marginHorizontal="@dimen/space_xs"
            android:background="@drawable/add_set_back"
            android:layout_columnWeight="1"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_rowWeight="1"
            android:layout_marginHorizontal="@dimen/space_xs"
            android:background="@drawable/add_set_back"
            android:layout_columnWeight="1"
            />

    </LinearLayout>

</LinearLayout>