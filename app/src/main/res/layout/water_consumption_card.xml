<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_profile_page_water_card"
    android:padding="@dimen/space_m"
    android:layout_weight="1"
    android:layout_marginHorizontal="@dimen/space_m"
    android:layout_marginVertical="@dimen/space_m"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/space_s"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/user_page_card_icon_dimen"
            android:src="@drawable/icon_glass_water"
            android:layout_marginEnd="@dimen/space_s"
            android:layout_height="@dimen/user_page_card_icon_dimen"
            app:tint="#80DEEA" />

        <TextView
            android:layout_width="match_parent"
            android:text="Water\nDrank"
            android:textColor="@color/white"
            android:textSize="@dimen/text_medium"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="999"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textAlignment="viewEnd"
            android:textColor="#E0F7FA"
            android:textSize="@dimen/text_xlarge"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="mL"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/space_xs"
            android:textSize="@dimen/text_small"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>