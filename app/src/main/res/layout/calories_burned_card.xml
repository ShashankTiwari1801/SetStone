<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_profile_page_calorie_card"
    android:padding="@dimen/space_m"
    android:layout_weight="1"
    android:layout_marginStart="@dimen/space_m"
    android:layout_marginVertical="@dimen/space_m"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/space_s"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/user_page_card_icon_dimen"
            android:src="@drawable/icon_flame"
            android:layout_marginEnd="@dimen/space_s"
            android:layout_height="@dimen/user_page_card_icon_dimen"
            app:tint="@color/brick_red" />

        <TextView
            android:layout_width="match_parent"
            android:text="Calories"
            android:textColor="#263238"
            android:textSize="@dimen/text_medium"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="999"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textAlignment="viewEnd"
            android:textColor="#D84315"
            android:textSize="@dimen/text_xlarge"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="kcals"
            android:textColor="@color/darker_background_color_main"
            android:layout_marginStart="@dimen/space_xs"
            android:textSize="@dimen/text_small"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>