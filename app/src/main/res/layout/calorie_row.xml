<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_gravity="center_horizontal"
    android:layout_margin="@dimen/space_m"
    android:background="@drawable/calorie_card_back"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/space_s"
    android:paddingHorizontal="@dimen/space_m"
    >
    <TextView
        android:layout_width="wrap_content"
        android:background="@drawable/icon_flame_old"
        android:backgroundTint="@color/brick_red"
        android:layout_marginEnd="@dimen/space_s"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/TVDailyCaloriesBurned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="_"
        android:layout_marginEnd="@dimen/space_s"
        android:textColor="#FF6D00"
        android:textSize="@dimen/text_xlarge"
        android:fontFamily="@font/exo_light"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calorie_burned"
        android:textColor="@color/off_white_text"
        android:fontFamily="@font/exo_light"
        android:textSize="@dimen/text_medium" />
</LinearLayout>