<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navbar_height"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom"
    android:layout_marginHorizontal="@dimen/space_s"
    android:layout_marginBottom="@dimen/space_m"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/space_xl">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/navbar_height"
        android:background="@drawable/background_navbar_container"
        android:paddingHorizontal="@dimen/space_xl">

        <LinearLayout
            android:id="@+id/LL_NAV_BAR_BTN_CONTAINER"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/JUMP_BTN"
                android:layout_width="@dimen/navbar_btn_height"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/space_l"
                android:src="@drawable/dumbbell" />

            <ImageView
                android:layout_width="@dimen/navbar_btn_height"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/space_l"
                android:src="@drawable/icon_analysis" />

            <ImageView
                android:layout_width="@dimen/navbar_btn_height"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/space_l"
                android:src="@drawable/icon_user" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>