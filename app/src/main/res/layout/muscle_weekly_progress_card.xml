<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@color/chest_card"
    android:layout_margin="5sp"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="75sp"
            android:layout_height="100sp"
            android:id="@+id/IV_PROGRESS_CARD_MUSCLE_ICON"
            android:layout_margin="10sp"
            android:src="@drawable/icon_muscle_chest"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:text="CHEST"
                android:textSize="20sp"
                android:fontFamily="@font/exo_light"
                android:id="@+id/TV_PROGRESS_CARD_MUSCLE_NAME"
                android:layout_marginHorizontal="10sp"
                android:layout_marginVertical="5sp"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="12"
                    android:fontFamily="@font/exo_light"
                    android:id="@+id/TV_PROGRESS_CARD_COMPLETED_SET"
                    android:gravity="bottom"
                    android:layout_marginVertical="10sp"
                    android:textSize="30sp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginVertical="10sp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/exo_light"
                    android:layout_columnWeight="1"
                    android:gravity="bottom"
                    android:id="@+id/TV_PROGRESS_CARD_TOTAL_SET"
                    android:text="/25"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="2sp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:text="40%"
            android:gravity="center"
            android:fontFamily="@font/exo_light"
            android:id="@+id/TV_PROGRESS_CARD_PROGRESS_VALUE"
            android:background="@color/chest_card_complement"
            android:layout_height="20sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_margin="2sp"
            android:id="@+id/TV_PROGRESS_CARD_PROGRESS_BAR"
            android:background="@color/white"
            android:alpha="0.2"
            android:layout_height="16sp"/>
    </RelativeLayout>
</LinearLayout>